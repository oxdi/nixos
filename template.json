{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "1m",
      "boot_command": [
        "root<enter>",
        "set -e",
        "stop sshd<enter>",
        "fdisk /dev/sda<enter>",
        "n",
        "<enter><enter><enter><enter><enter>",
        "a<enter>",
        "1<enter>",
        "w<enter>",
        "<wait>",
        "mkfs.ext4 -j -L nixos /dev/sda1<enter><wait5>",
        "mount LABEL=nixos /mnt<enter><wait>",
        "nixos-generate-config --root /mnt<enter><wait>",
        "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/configuration.nix > /mnt/etc/nixos/configuration.nix<enter><wait>",
        "curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/guest-virtualbox.nix > /mnt/etc/nixos/guest.nix<enter><wait>",
        "nixos-install && reboot<enter>"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux_64",
      "http_directory": "nixos",
      "iso_checksum": "53ee98b286b2243dfbfaed741dbd5892652d2945abaa684ee88af5da1b00ea29",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.nixos.org/nixos/unstable/nixos-15.05pre58357.a869c83/nixos-minimal-15.05pre58357.a869c83-x86_64-linux.iso",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_username": "root",
      "ssh_key_path": "keys/vagrant.key",
      "ssh_wait_timeout": "20m",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2000"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo sh '{{.Path}}'",
      "script": "scripts/postinstall.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "nixos-15.05-x86_64-{{.Provider}}.box"
    }
  ]
}

